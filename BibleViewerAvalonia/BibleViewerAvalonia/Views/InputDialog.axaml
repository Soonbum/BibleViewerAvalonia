<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BibleViewerAvalonia.ViewModels"
        x:DataType="vm:InputDialogViewModel"
        x:Class="BibleViewerAvalonia.Views.InputDialog"
        Title="{Binding Title}"
        Width="350" Height="150"
        CanResize="False"
        WindowStartupLocation="CenterOwner">
  <StackPanel Margin="15" Spacing="10">
    <TextBlock Text="{Binding Message}" FontWeight="Bold"/>
    <TextBox Text="{Binding InputText}" Watermark="책갈피 이름을 입력하세요."/>
    <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,10,0,0">
      <Button Content="확인" Click="OkButton_Click" IsDefault="True"/>
      <Button Content="취소" Click="CancelButton_Click" IsCancel="True"/>
    </StackPanel>
  </StackPanel>
</Window>