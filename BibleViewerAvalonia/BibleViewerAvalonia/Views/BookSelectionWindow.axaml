<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:BibleViewerAvalonia.ViewModels"
        x:DataType="vm:BookSelectionWindowViewModel"
        x:Class="BibleViewerAvalonia.Views.BookSelectionWindow"
        xmlns:sys="using:System"
        Title="책 선택"
        Width="1000" Height="700"
        MinWidth="800" MinHeight="500">

  <Window.DataContext>
    <vm:BookSelectionWindowViewModel/>
  </Window.DataContext>

  <ScrollViewer>
    <ItemsControl ItemsSource="{Binding BookNames}">
      <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
          <WrapPanel Margin="10" />
        </ItemsPanelTemplate>
      </ItemsControl.ItemsPanel>

      <ItemsControl.ItemTemplate>
        <DataTemplate x:DataType="sys:String">
          <Button Content="{Binding}"
                  Command="{Binding $parent[ItemsControl].DataContext.SelectBookCommand}"
                  CommandParameter="{Binding}"
                  MinWidth="100"
                  Margin="5"
                  Padding="10, 5"
                  HorizontalContentAlignment="Center"/>
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>
  </ScrollViewer>

</Window>